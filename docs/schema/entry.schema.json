{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openword.org/schemas/entry.schema.json",
  "title": "Openword Lexicon Entry",
  "description": "Normalized lexicon entry with labels, provenance, and enrichment metadata",
  "type": "object",
  "required": ["word", "sources"],
  "additionalProperties": false,
  "properties": {
    "word": {
      "type": "string",
      "description": "The word or phrase in Unicode NFKC normalized form",
      "minLength": 1
    },
    "pos": {
      "type": "array",
      "description": "Part-of-speech tags (may be empty if unknown)",
      "items": {
        "type": "string",
        "enum": [
          "noun",
          "verb",
          "adjective",
          "adverb",
          "pronoun",
          "preposition",
          "conjunction",
          "interjection",
          "determiner",
          "particle",
          "auxiliary"
        ]
      },
      "uniqueItems": true,
      "default": []
    },
    "labels": {
      "type": "object",
      "description": "Controlled vocabulary labels for usage, region, temporal, and domain classification",
      "additionalProperties": false,
      "properties": {
        "register": {
          "type": "array",
          "description": "Sociolinguistic register (formality, vulgarity, etc.)",
          "items": {
            "type": "string",
            "enum": [
              "formal",
              "informal",
              "colloquial",
              "slang",
              "vulgar",
              "offensive",
              "derogatory",
              "euphemistic",
              "humorous",
              "literary"
            ]
          },
          "uniqueItems": true,
          "default": []
        },
        "region": {
          "type": "array",
          "description": "Regional/dialectal usage (e.g., en-GB, en-US)",
          "items": {
            "type": "string",
            "pattern": "^en-[A-Z]{2}$"
          },
          "uniqueItems": true,
          "default": []
        },
        "temporal": {
          "type": "array",
          "description": "Temporal usage status",
          "items": {
            "type": "string",
            "enum": [
              "archaic",
              "obsolete",
              "dated",
              "historical",
              "modern"
            ]
          },
          "uniqueItems": true,
          "default": []
        },
        "domain": {
          "type": "array",
          "description": "Subject domain or specialized field",
          "items": {
            "type": "string",
            "enum": [
              "medical",
              "legal",
              "technical",
              "scientific",
              "military",
              "nautical",
              "botanical",
              "zoological",
              "computing",
              "mathematics",
              "music",
              "art",
              "religion",
              "culinary",
              "sports",
              "business",
              "finance"
            ]
          },
          "uniqueItems": true,
          "default": []
        }
      },
      "default": {}
    },
    "is_phrase": {
      "type": "boolean",
      "description": "True if this entry is a multi-word phrase (e.g., 'give up')",
      "default": false
    },
    "lemma": {
      "type": ["string", "null"],
      "description": "Base form if this is an inflection (e.g., 'run' for 'running')",
      "default": null
    },
    "morphology": {
      "type": "object",
      "description": "Morphological structure and derivation information extracted from etymology",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "description": "Type of morphological formation",
          "enum": ["suffixed", "prefixed", "compound", "affixed", "circumfixed", "simple"]
        },
        "base": {
          "type": "string",
          "description": "Base word or root (e.g., 'happy' for 'happiness', 'break' for 'unbreakable')"
        },
        "components": {
          "type": "array",
          "description": "All morphological components in order (e.g., ['un-', 'break', '-able'])",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "prefixes": {
          "type": "array",
          "description": "Prefix morphemes (e.g., ['un-'] for 'unbreakable')",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "suffixes": {
          "type": "array",
          "description": "Suffix morphemes (e.g., ['-ness'] for 'happiness', ['-able'] for 'unbreakable')",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "is_compound": {
          "type": "boolean",
          "description": "True if formed by compounding two or more words (e.g., 'bartender' = 'bar' + 'tender')",
          "default": false
        },
        "etymology_template": {
          "type": "string",
          "description": "Raw Wiktionary etymology template for reference (e.g., '{{suffix|en|happy|ness}}')"
        }
      },
      "required": ["type", "components"]
    },
    "concreteness": {
      "type": "string",
      "description": "Concreteness classification (nouns only): concrete (≥3.5), abstract (<2.5), or mixed (2.5-3.5). Source: Brysbaert et al. (2014) preferred, WordNet fallback.",
      "enum": ["concrete", "abstract", "mixed"]
    },
    "concreteness_rating": {
      "type": "number",
      "description": "Raw Brysbaert concreteness score on 1-5 scale. 1.0=most abstract (e.g., 'freedom'), 5.0=most concrete (e.g., 'castle'). Only present for ~39k words with Brysbaert data.",
      "minimum": 1.0,
      "maximum": 5.0
    },
    "concreteness_sd": {
      "type": "number",
      "description": "Standard deviation of Brysbaert concreteness ratings (0.0-2.0). Lower SD indicates higher rater agreement and more reliable rating. Only present for words with Brysbaert data.",
      "minimum": 0.0
    },
    "frequency_tier": {
      "type": "string",
      "description": "Frequency rank code (A-Z) based on logarithmic scale. A=rank 1 (most frequent), M≈1000, Q≈10000, U≈100000, Z=extremely rare",
      "pattern": "^[A-Z]$"
    },
    "sources": {
      "type": "array",
      "description": "Provenance: list of source identifiers contributing to this entry",
      "items": {
        "type": "string",
        "pattern": "^[a-z_]+$"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "license_sources": {
      "type": "object",
      "description": "Mapping of licenses to source identifiers (e.g., {'CC0': ['enable'], 'CC-BY-SA-4.0': ['wikt']})",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^[a-z_]+$"
        },
        "uniqueItems": true
      },
      "default": {}
    }
  }
}
