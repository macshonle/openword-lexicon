{
  "name": "Simple Words - 1 to 3 Syllables",
  "description": "Simple words with 1-3 syllables for beginning readers and ESL learners. Focused on high-frequency, everyday vocabulary that's easy to pronounce and understand.",
  "version": "1.0",
  "distribution": "en",
  "filters": {
    "syllables": {
      "min": 1,
      "max": 3,
      "require_syllables": true
    },
    "frequency": {
      "min_tier": "A",
      "max_tier": "P"
    },
    "character": {
      "min_length": 3,
      "max_length": 10
    },
    "labels": {
      "register": {
        "exclude": ["slang", "vulgar", "offensive", "derogatory"]
      },
      "temporal": {
        "exclude": ["archaic", "obsolete"]
      },
      "domain": {
        "exclude": ["technical", "medical", "legal", "scientific"]
      }
    },
    "phrase": {
      "is_phrase": false
    },
    "policy": {
      "family_friendly": true,
      "modern_only": true,
      "no_jargon": true
    }
  },
  "output": {
    "format": "wordlist",
    "sort": "frequency"
  },
  "metadata": {
    "target_audience": "Beginning readers, ESL learners, children",
    "use_cases": [
      "Reading level assessment",
      "Vocabulary building for beginners",
      "ESL/EFL teaching materials",
      "Pronunciation practice",
      "Sight word lists",
      "Spelling practice"
    ],
    "expected_count": "1000-3000 words",
    "examples": [
      "cat",
      "dog",
      "run",
      "jump",
      "table",
      "happy",
      "window",
      "elephant",
      "beautiful",
      "together"
    ],
    "notes": [
      "All words have 1-3 syllables with Wiktionary verification",
      "High frequency (tiers A-P) ensures common, familiar words",
      "No jargon or technical terms",
      "Length limited to 3-10 characters for readability",
      "Perfect for building foundational vocabulary"
    ]
  }
}
